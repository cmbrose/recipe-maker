<div class="container p-3">
  <div class="row">
    <h1>Recipe Templater</h1>
  </div>

  <div class="row" style="padding-top:12px">
    <h2>Create a new recipe</h2>
    <%= form_for :recipe, :url => url_for(:controller => 'recipes', :action => 'create_from_url') do |form| %>
      <% form.options[:html][:class] = 'form-horizonal' %>
      <div class="container">
        <div class="row">
          <div class="col-sm-10">
            <div class="form-group row">
              <%= form.label 'From Url:', for: 'urlInput', class: 'strong v-centered col-sm-2' %>
              <div class="col-sm-10">
                <%= form.text_field :url, class: 'form-control', id: 'urlInput' %>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="form-group">
              <%= form.submit 'Create', class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= form_for :recipe, :url => url_for(:controller => 'recipes', :action => 'create_empty') do |form| %>
      <% form.options[:html][:class] = 'form-horizonal' %>
      <div class="container">
        <div class="row">
          <div class="col-sm-10">
            <div class="form-group row">
              <%= form.label 'Create an empty recipe', class: 'strong v-centered col-sm-12' %>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="form-group">
              <%= form.submit 'Create', class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <h2>Recent creations</h2>
    <div class="container">
      <% recipes.each do |recipe| %>
        <%= react_component("home/RecipeListItem", { id: recipe.id, recipe: recipe }) %>
      <% end %>
    </div>
  </div>

</div>