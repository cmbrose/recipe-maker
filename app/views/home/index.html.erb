<div class="container p-3">
  <div class="row">
    <h1>Recipe Templater</h1>
  </div>

  <div class="row" style="padding-top:12px">
    <h2>Create a new recipe</h2>
    <%= form_for :recipe, :url => url_for(:controller => 'recipes', :action => 'create_from_url') do |form| %>
      <% form.options[:html][:class] = 'form-horizonal' %>
      <div class="container">
        <div class="row">
          <div class="col-sm-10">
            <div class="form-group row">
              <%= form.label 'From Url:', for: 'urlInput', class: 'strong v-centered col-sm-2' %>
              <div class="col-sm-10">
                <%= form.text_field :url, class: 'form-control', id: 'urlInput' %>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="form-group">
              <%= form.submit 'Create', class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="container">
      <div class="row">
        <div class="col-sm-10">
          <div class="form-group row">
            <%= label_tag 'Create an empty recipe', nil, class: 'strong v-centered col-sm-12' %>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <%= link_to 'Create', new_recipe_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <h2>Recent creations</h2>
    <div class="container">
      <% recipes.each do |recipe| %>
        <%= react_component("recipes/RecipeListItem", { 
          id: recipe.id,
          name: recipe.name,
          tags: recipe.tags,
          preview_url: recipe.preview_url,
          default_preview: image_path("unknown.jpg")
        }) %>
      <% end %>
    </div>
  </div>

</div>
