<% content_for :title, "Menus" %>

<div class="container">
  <div class="row">
    <h1>Menus</h1>
  </div>

  <%= form_for :menu, :url => url_for(:controller => 'menus', :action => 'create_empty') do |form| %>
    <% form.options[:html][:class] = 'form-horizonal' %>
    <div class="container">
      <div class="row">
        <div class="col-sm-10">
          <div class="form-group row">
            <%= form.label 'Create an new menu', class: 'strong v-centered col-sm-12' %>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <%= form.submit 'Create', class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row" style="padding-top:12px">
    <% menus.each do |menu| %>
      <%= react_component("menus/MenuListItem", { 
        id: menu.id, 
        menu: menu
      }) %>
    <% end %>
  </div>
</div>